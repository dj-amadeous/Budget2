<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.viewStatsActivity">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="329dp"
        android:layout_height="229dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="287dp"
        android:layout_height="45dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graph">

        <TextView
            android:id="@+id/wantsGraphs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wants" />

        <TextView
            android:id="@+id/needsGraphs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Needs" />

        <TextView
            android:id="@+id/savesGraphs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Saves" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/graph">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actual"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Planned"
            android:textColor="#03A9F4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="281dp"
        android:layout_height="153dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="139dp"
            android:layout_height="151dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalIncomeNoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOTAL INCOME: " />

            <TextView
                android:id="@+id/monthlyWantsNoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONTHLY WANTS:" />

            <TextView
                android:id="@+id/monthlyNeedsNoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONTHLY NEEDS:" />

            <TextView
                android:id="@+id/monthlySavesNoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONTHLY SAVES:" />

            <TextView
                android:id="@+id/dailyWantsNoEdits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAILY WANTS:" />

            <TextView
                android:id="@+id/dailyNeedsNoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAILY NEEDS:" />

            <TextView
                android:id="@+id/dailySavesNoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAILY SAVES" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="141dp"
            android:layout_height="151dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalIncomeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A" />

            <TextView
                android:id="@+id/monthlyWantsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A" />

            <TextView
                android:id="@+id/monthlyNeedsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A" />

            <TextView
                android:id="@+id/monthlySavesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A" />

            <TextView
                android:id="@+id/dailyWantsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A" />

            <TextView
                android:id="@+id/dailyNeedsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A" />

            <TextView
                android:id="@+id/dailySavesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="210dp"
        android:layout_height="65dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="56dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <Button
            android:id="@+id/demoButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Demo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/cancelButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Back"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>